<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="4dp"
    tools:context=".FragmentStatistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="top"
        android:orientation="vertical">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/header_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_statistics"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView2"
                style="@style/textview_style"
                android:text="@string/cases_7days" />

            <TextView
                android:id="@+id/cases_7days"
                style="@style/textview_style2"
                android:text="Loading" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                style="@style/textview_style"
                android:text="@string/cases_14days" />

            <TextView
                android:id="@+id/cases_14days"
                style="@style/textview_style2"
                android:text="Loading" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:gravity="center"
            android:outlineSpotShadowColor="@color/black">

            <TextView
                android:id="@+id/textView4"
                style="@style/textview_style"
                android:text="@string/cases_30days" />

            <TextView
                android:id="@+id/cases_30days"
                style="@style/textview_style2"
                android:text="Loading" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView5"
                style="@style/textview_style"
                android:text="@string/cases_100days" />

            <TextView
                android:id="@+id/cases_100days"
                style="@style/textview_style2"
                android:text="Loading" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView1"
                style="@style/textview_style"
                android:text="@string/cases_total" />

            <TextView
                android:id="@+id/cases_total"
                style="@style/textview_style2"
                android:text="Loading" />

        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statistics_region"
                style="@style/textview_style"
                android:text="@string/statistics_region" />

            <TextView
                android:id="@+id/statistics_region2"
                style="@style/textview_style2" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statistics_city"
                style="@style/textview_style"
                android:text="@string/statistics_city" />

            <TextView
                android:id="@+id/statistics_city2"
                style="@style/textview_style2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statistics_sensor"
                style="@style/textview_style"
                android:text="@string/statistics_sensor" />

            <TextView
                android:id="@+id/statistics_sensor2"
                style="@style/textview_style2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statistics_age"
                style="@style/textview_style"
                android:text="@string/statistics_age" />


            <TextView
                android:id="@+id/statistics_age2"
                style="@style/textview_style2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statistics_sex"
                style="@style/textview_style"
                android:text="@string/statistics_sex" />

            <TextView
                android:id="@+id/statistics_sex2"
                style="@style/textview_style2" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"></Space>

        <Button
            android:id="@+id/buttonFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="Edit Filters" />

    </LinearLayout>


</RelativeLayout>